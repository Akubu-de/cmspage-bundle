{% set main_menu = 'cmspages' %}

{% extends app.request.query.get('isModal')|default(false) ? "@NfqAdmin/modal.html.twig" : "@NfqAdmin/layout.html.twig" %}

{% form_theme delete_form '@NfqAdmin/form.html.twig' %}

{% block title %}
    {% if app.request.query.get('isModal') %}

        {{ entity.name }} - {{ 'cmspage.cmspage_remove'|trans }}

    {% endif %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {{ 'cmspage.cmspage_remove_text'|trans }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-8 col-sm-4">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
