{% trans_default_domain 'adminInterface' %}
{% set width = '80%' %}
{% set cmsType = ('admin.cms.labels.adapter_' ~ app.request.query.get('_type'))|trans %}
{% set title = 'admin.cms.cmspage_new'|trans({'%cms_type%': cmsType}) %}
{% extends app.request.query.get('isModal')|default(false) ? '@NfqAdmin/modal.html.twig' : '@NfqAdmin/base/index.html.twig' %}

{% block page_title %}
    {{ title }}
{% endblock %}

{% block page_subtitle %}{% endblock %}

{% block page_box_header %}
    {{ title }}
{% endblock %}

{% block page_box_body %}
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs language-tabs" role="tablist">
                {% for locale, form in forms %}
                    <li class="{% if isActiveLocale(_context, locale) %}active{% endif %}">
                        <a href="#{{ locale }}-tab" role="tab" data-toggle="tab">{{ locale }}</a>
                    </li>
                {% endfor %}
            </ul>
            <br/>
            <div class="tab-content">
                {% embed '@NfqCmsPage/admin/cms_page/_form.htm.twig' %}{% endembed %}
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_js %}
    {{ tinymce_init() }}
{% endblock %}
